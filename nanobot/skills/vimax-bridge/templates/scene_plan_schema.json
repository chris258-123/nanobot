{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ViMax Bridge Scene Plan",
  "type": "object",
  "required": ["chapter_no", "title", "scenes"],
  "properties": {
    "chapter_no": {
      "type": "string",
      "pattern": "^[0-9]{4}$"
    },
    "title": {
      "type": "string"
    },
    "source": {
      "type": "string",
      "enum": ["llm", "heuristic"]
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["scene_id", "prompt", "duration_s", "camera", "style"],
        "properties": {
          "scene_id": {
            "type": "string"
          },
          "prompt": {
            "type": "string",
            "minLength": 1
          },
          "duration_s": {
            "type": "integer",
            "minimum": 3,
            "maximum": 8
          },
          "camera": {
            "type": "string"
          },
          "style": {
            "type": "string"
          }
        }
      }
    }
  }
}
